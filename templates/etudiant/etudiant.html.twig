{% extends 'base.html.twig' %}

{% block title %}Hello EtudiantController!{% endblock %}
{% block body %}
<div class="card mt">
        <div class="d-flex justify-content-between mt-2">
            <a name="" data-toggle="modal" data-target="#modal" href="{{ path("create_student") }}" id="addNewStudent" class="btn btn-primary">Ajouter un nouveau etudiant</a>
            <form class="form-inline my-2 my-lg-0" method="POST" action="">
                <input class="form-control mr-sm-2" type="search" placeholder="Rechercher un Etudiant" aria-label="Search" name="terme">
                <button class="btn btn-outline-primary my-2 my-sm-0" type="submit" name="rechercher">Search</button>
            </form>
        </div> 
        <div class="card-body table-responsive-sm">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Matricule</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">email</th>
                        <th scope="col">Téléphone </th>
                        <th scope="col">Type</th>
                        <th scope="col">Modifier</th>
                    </tr>
                </thead>
                <tbody>
                    {% for studentList in students %}
                        {% for student in studentList %}
                            <tr>
                                <td>{{ student.matricule}}</td>
                                <td>{{ student.nom}}</td>
                                <td>{{ student.prenom}}</td>
                                <td>{{ student.email}}</td>
                                <td>{{ student.telephone}}</td>
                                <td>{{ student.typeEtudiant}}</td>
                                <td><a href="" /></a></td>
                            </tr>
                        {% endfor %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% if formCreateStudent is defined %}
        <div class="modal fade" id="modal">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title text-center" id="title">Enregistrer Etudiant</h1>
                        <!-- <button type="button" class="close" data-dismiss="modal">x</button> -->
                    </div>
                    <div class="modal-body" id="msg">
                    <div id="alert"></div>
                        {{form_start(formCreateStudent,{
                            "action": path("create_student"),
                            "method": "POST",
                            "attr":{
                                "id":"studentSubscribtionForm"
                                }
                            }
                        )}}
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                {{ form_row(formCreateStudent.nom)}}
                                <div class="my-custom-class-for-errors show-error text-danger">
                                    {{ form_errors(formCreateStudent) }}
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_row(formCreateStudent.prenom)}}
                                <div class="my-custom-class-for-errors show-error text-danger">
                                    {{ form_errors(formCreateStudent) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                {{ form_row(formCreateStudent.email)}}
                                <div class="my-custom-class-for-errors show-error text-danger">
                                    {{ form_errors(formCreateStudent) }}
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_row(formCreateStudent.dateInscription)}}
                                <div class="my-custom-class-for-errors show-error text-danger">
                                    {{ form_errors(formCreateStudent) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                {{ form_row(formCreateStudent.dateNaissance)}}
                                <div class="my-custom-class-for-errors show-error text-danger">
                                    {{ form_errors(formCreateStudent) }}
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_row(formCreateStudent.telephone)}}
                                <div class="my-custom-class-for-errors show-error text-danger">
                                    {{ form_errors(formCreateStudent) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_row(formCreateStudent.typeEtudiant) }}
                        </div>
                        <div class="" id="info">
                        </div>
                        <div class="d-flex justify-content-around mb-3">
                            <button type="submit" class="btn btn-primary btn-lg" id="ajouter" name="ajouter">Ajouter</button>
                            <button type="button" class="btn btn-danger btn-lg" data-dismiss="modal">Annuler</button>
                        </div>
                        {{form_end(formCreateStudent,{
                            "render_rest":false
                        })}}
                    </div>
                </div>
            </div>
        </div> 
    {% endif %}
{% endblock %}
{% block javascripts %}
    <script>
        $(function () {
            const pension = '{{ form_row(formCreateStudent.pension) }}';
            const address = '{{ form_row(formCreateStudent.adresse) }}';
            const rooms = '{{ form_row(formCreateStudent.chambre) }}';
            const error = '{{ form_errors(formCreateStudent) }}';
            const boursierLoge = () => {
                const elt = `
                    <div class="form-group col-md-6">
                        ${pension}
                    </div>
                    <div class="form-group col-md-6">
                        ${rooms}
                    </div>
                    `;
                $("#info").addClass("form-row");
                $("#info").html(elt);
            };
            $("#etudiant_typeEtudiant").on("change", function () {
                $("#alert").html("");
                $("#info").html("");
                $("#info").attr("class","");
                const value = this.value;
                if(value == "boursier logé"){
                    boursierLoge();
                }else if(value == "boursier non logé"){
                    const elt = `
                        <div class="form-group">
                            ${pension}
                        </div>
                        `;
                    $("#info").html(elt);
                }else if(value == "non boursier"){
                    const elt = `
                        <div class="form-group">
                            ${address}
                        </div>
                        <div class="my-custom-class-for-errors show-error text-danger">
                            ${error}
                        </div>
                        `;
                    $("#info").html(elt);
                }
            });
            boursierLoge();
        });
    </script>
    <script src="{{ asset("js/student.js")}}"></script>
{% endblock %}
